pipeline {
    agent any
    tools{
        maven 'maven-3'
    }

    stages {
        stage('Git Checkout') {
            steps {
               git url:'https://github.com/bcreddydevops/mavenweb-demo.git', branch: 'main'
            }
        }
        stage('Maven Build') {
            steps {
               sh 'mvn clean package'
            }
        }
        stage('Generate sonarqube-analysis'){
            steps{
                withSonarQubeEnv(installationName: 'sonarqube-8', credentialsId: 'sonarqube-creds') {
                 sh 'mvn sonar:sonar'
                }
            }
        }
    }
}
